<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="projet.olivraison.detailCommandeLivreur"
    tools:showIn="@layout/app_bar_detail_commande_livreur"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_details_commande_cours"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:text="Référence commande:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/referenceCommande"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/textView5"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <TextView
                    android:id="@+id/textView6"
                    android:text="Adresse livraison:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/referenceCommande"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="14dp"/>


                <TextView
                    android:id="@+id/adresseCommande"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/textView6"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/cast_expanded_controller_background_color" />


                <TextView
                    android:id="@+id/textView7"
                    android:text="Nom et prénom client:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/adresseCommande"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="14dp"/>


                <TextView
                    android:id="@+id/fullnameCommande"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/textView7"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/cast_expanded_controller_background_color" />


                <TextView
                    android:id="@+id/textView8"
                    android:text="Téléphone :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/fullnameCommande"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="14dp"/>


                <TextView
                    android:id="@+id/telephoneCommande"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/textView8"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/cast_expanded_controller_background_color" />


                <TextView
                    android:id="@+id/textView9"
                    android:text="Total commande:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/telephoneCommande"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="14dp"/>


                <TextView
                    android:id="@+id/prixCommande"
                    android:layout_height="26dip"
                    android:ellipsize="marquee"
                    android:singleLine="true"
                    android:textSize="18sp"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="150dp"
                    android:textColor="@color/cast_expanded_controller_background_color" />

                <Button
                    android:text="prendre la commande "
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#AA0114"
                    android:textColor="#FFF"
                    android:id="@+id/boutonPrendreCommande"
                    android:layout_marginTop="139dp"
                    android:layout_below="@+id/textView9"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
    </RelativeLayout>
</ScrollView>
