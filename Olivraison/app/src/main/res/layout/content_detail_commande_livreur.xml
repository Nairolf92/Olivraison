<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_detail_commande_livreur"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="projet.olivraison.detailCommandeLivreur"
    tools:showIn="@layout/app_bar_detail_commande_livreur">

    <TextView
        android:id="@+id/textCommandeLivreur"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:ellipsize="marquee"
        android:textSize="12sp" />

    <Button
        android:text="prendre la commande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:background="#AA0114"
        android:textColor="#FFF"
        android:id="@+id/button"
        android:layout_above="@+id/textCommandeLivreur"
        android:layout_gravity="center|bottom"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/titreCommande"
        android:textColor="#000000"
        android:text="Référence :"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Adresse :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:id="@+id/textView3"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/titreCommande"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp" />

    <TextView
        android:text="Nom :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/baliseNom"
        android:textColor="#000000"
        android:layout_below="@+id/textView3"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <TextView
        android:text="Prenom :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:id="@+id/textView5"
        android:textColor="#000000"
        android:layout_below="@+id/baliseNom"
        android:layout_alignLeft="@+id/baliseNom"
        android:layout_alignStart="@+id/baliseNom" />

    <TextView
        android:text="Telephone :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="#000000"
        android:id="@+id/textView7"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5" />

    <TextView
        android:text="Prix :"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:textColor="#000000"
        android:id="@+id/textView9"
        android:layout_below="@+id/textView7"
        android:layout_alignLeft="@+id/textView7"
        android:layout_alignStart="@+id/textView7" />

    <TextView
        android:text="00$"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView9"
        android:layout_toLeftOf="@+id/TextTelephone"
        android:layout_toStartOf="@+id/TextTelephone"
        android:id="@+id/TextPrix" />

    <TextView
        android:text="0612345678"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextTelephone"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_alignRight="@+id/titreCommande"
        android:layout_alignEnd="@+id/titreCommande"
        android:layout_marginRight="18dp"
        android:layout_marginEnd="18dp" />

    <TextView
        android:text="Prenom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextPrenom"
        android:layout_above="@+id/textView7"
        android:layout_alignLeft="@+id/TextTelephone"
        android:layout_alignStart="@+id/TextTelephone" />

    <TextView
        android:text="NomDeFamille"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TextNom"
        android:layout_above="@+id/textView5"
        android:layout_alignLeft="@+id/TextPrenom"
        android:layout_alignStart="@+id/TextPrenom" />

    <TextView
        android:text="rue.."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LabelRue"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignLeft="@+id/TextNom"
        android:layout_alignStart="@+id/TextNom" />

</RelativeLayout>
